#!/bin/bash

function dkHelp () {
  echo "Dockerizer command: wp"
  echo
  echo "wordpress console, Accepts all common software params."
}

while [ -n "$1" ]; do
    case "$1" in
        --dkhelp)
            dkHelp
            exit
            ;;
    esac
done

# Since docker4drupal internally uses "Drush Launcher" we
# dont need to take care about the drush location (different betweem drupal 7 and 8)

# source command_wrapper [CONTAINER NAME] [COMMAND] $@ = params to send.
source _command_wrapper_exec 'php' 'COLUMNS=160 wp ' $@
