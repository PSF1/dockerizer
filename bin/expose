#!/bin/bash

# MAKES SSH TO THE PHP MACHINE.
# The default container will be "php" but you can access to any container
# with "expose frontend", "expose mariadb", etc
# -----------------------------

script_dirname="`dirname $0`"

if [ "$#" -eq  "0" ]
  then
    container="php"
  else
    container=$1
fi



docker_compose="docker-compose -f $script_dirname/../docker-compose.yml exec --privileged"
command="$docker_compose $container /bin/bash"

echo -e "Entering to \e[32m$container\e[0m container"
eval "$command"
