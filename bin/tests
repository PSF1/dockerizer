#!/bin/bash

function dkHelp () {
  echo "Dockerizer command: tests"
  echo
  echo "Execute PHPUnit project tests."
}

while [ -n "$1" ]; do
    case "$1" in
        --dkhelp)
            dkHelp
            exit
            ;;
    esac
done

# source command_wrapper [CONTAINER NAME] [COMMAND] $@ = params to send.
source _command_wrapper_exec 'php' 'COLUMNS=160 php bin/phpunit' $@
